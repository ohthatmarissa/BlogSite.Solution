@using BlogSite.Models;
@using System.Collections.Generic;
@{Layout = "_Layout";}
@Html.Partial("Header")

@if(Model.GetBlogs().Count == 0)
{
    <p>There are currently no blogs associated with this community :/</p>
}
else
{
    foreach(Blog blog in Model.GetBlogs())
    {
        <a href="/blogs/@blog.GetId()">@blog.GetTitle()</a>
    }
}