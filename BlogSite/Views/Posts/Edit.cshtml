@using BlogSite.Models;
@using System.Collections.Generic;
@{Layout = "_Layout";}
@Html.Partial("Header")


@if(Blog.FindById(Model.GetBlogId()).IsLoggedIn())
{
<form action="/blogs/@Model.GetBlogId()/posts/@Model.GetId()/update" method="post" enctype="multipart/form-data">
    <label>Post Title:</label>
    <input type="text" name="title" value="@Model.GetTitle()" required>
    <label>Content:</label>
    <textarea class= "k-textbox" style="width:100%; height: 148px;" type="text" name="content" required>@Model.GetContent()</textarea><br>

    <label for="file">Upload an image:</label>
    <input type="file" name="file" />

    <button type="submit">Save</button>
</form>
}
else
{
<p>Are you lost?</p>
}