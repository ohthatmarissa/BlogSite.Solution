@using BlogSite.Models;
@using System.Collections.Generic;
@{Layout = "_Layout";}
@Html.Partial("Header")


@if(Blog.FindById(Model.GetBlogId()).IsLoggedIn())
{
<form action="/blogs/@Model.GetBlogId()/posts/@Model.GetId()/update" method="post">
    <label>Post Title:</label>
    <input type="text" name="title" value="@Model.GetTitle()" required>
    <label>Content:</label>
    <input type="text" name="content" value="@Model.GetContent()" required>
    <button type="submit">Save</button>
</form>
}
else
{
<p>Are you lost?</p>
}